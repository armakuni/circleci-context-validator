{
  "name": "@armakuni/circleci-context-validator",
  "version": "0.1.7",
  "description": "Circle Context Validation in Code",
  "author": "@tomphp @d3vadv3ntur3s",
  "bin": {
    "ccv": "./bin/run"
  },
  "homepage": "https://github.com/armakuni/circleci-context-validator",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "armakuni/circleci-context-validator",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-warn-if-update-available": "^2.0.17",
    "@types/js-yaml": "^4.0.5",
    "ajv": "^8.11.0",
    "better-ajv-errors": "^1.2.0",
    "chalk": "^4.1.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.8",
    "@types/node-fetch": "^2.6.1",
    "chai": "^4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "globby": "^11",
    "mocha": "^9",
    "nock": "^13.2.9",
    "oclif": "^2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.9.4"
  },
  "oclif": {
    "bin": "ccv",
    "dirname": "oex",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available"
    ],
    "warn-if-update-available": {
      "timeoutInDays": 7,
      "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
    },
    "topicSeparator": " ",
    "topics": {
      "circleci": {
        "description": "Validate and control environment variables for one or more contexts in code"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint:fix": "yarn lint --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\""
  },
  "engines": {
    "node": ">=16.13.1"
  },
  "bugs": "https://github.com/armakuni/circleci-context-validator/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
